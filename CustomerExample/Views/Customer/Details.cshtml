@model CustomerExample.Application.DTOs.CustomerDTO

<h1>Detalhes do Cliente</h1>

<div>
    <h4>Id:</h4>
    <p>@Model.Id</p>
</div>

<div>
    <h4>Name:</h4>
    <p>@Model.Name</p>
</div>

<div>
    <h4>Email:</h4>
    <p>@Model.Email</p>
</div>

<div>
    <h4>Logo:</h4>
    <img src="~/@Model.LogoPath" width="50" height="50" alt="Logo" />
</div>

<div>
    <h4>Logradouros:</h4>
    <ul>
        @foreach (var street in Model.Streets)
        {
            <li>@street.Street</li>
        }
    </ul>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar para a lista</a>
</p>

